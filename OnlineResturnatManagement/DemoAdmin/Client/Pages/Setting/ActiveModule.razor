@page "/setting/module"


@if (ActiveModules == null || ActiveModules.Count == 0)
{
    <span>Loading ActiveModules...</span>
}
else
{
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Roles</h4>
            <h6 class="card-subtitle"></h6>
            <br />
            <div class="row">
                @foreach (var item in ActiveModules)
                {
                    <div class="col-2">
                        <a class="btn btn-info" href="/setting/module/details/@item.Name">@item.Name</a>
                    </div>
                }
            </div>
        </div>
    </div>
}

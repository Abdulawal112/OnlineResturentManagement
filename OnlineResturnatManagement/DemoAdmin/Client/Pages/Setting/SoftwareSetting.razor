                                        <InputCheckbox type="checkbox" @bind-Value="softwareSetting.VatAfterDisscountEnable"></InputCheckbox>

                                    </div>
                                </div>
                            </div>
                            <!--/span-->
                        </div>
                        <div class="row">
                            <div class="col-6">
                                <div class="form-group row">
                                    <label class="col-sm-6 text-right col-form-label">Is KOT Serial Enable</label>
                                    <div class="col-sm-6">
                                        <InputCheckbox type="checkbox" @bind-Value="softwareSetting.IsKotSerialEnable"></InputCheckbox>
                                    </div>
                                </div>
                            </div>

                                    <label class="col-sm-6 text-right col-form-label">Is Last Discount Note</label>
                                    <div class="col-sm-6">
                                        <InputCheckbox type="checkbox" @bind-Value="softwareSetting.LastDiscountNoteEnable"></InputCheckbox>

                                    </div>
                                </div>
                            </div>
                            <!--/span-->
                        </div>
                        <div class="row">
                            <div class="col-6">
                                <div class="form-group row">
                                    <label class="col-sm-6 text-right col-form-label">Is SD Charge Apply</label>
                                    <div class="col-sm-6">
                                        <InputCheckbox type="checkbox" @bind-Value="softwareSetting.IsSdChargeApplyEnable"></InputCheckbox>
                                    </div>
                                </div>
                            </div>
                            <!--/span-->
                            <div class="col-6">
                                <div class="form-group row">
                                    <label class="col-sm-6 text-right col-form-label">Customer Display Enabled</label>
                                    <div class="col-sm-6">
                                        <InputCheckbox type="checkbox" @bind-Value="softwareSetting.CustomerDisplayEnable"></InputCheckbox>
                                    </div>
                                </div>
                            </div>
                            <!--/span-->
                        </div>
                        <div class="row">
                            <div class="col-6">
                                <div class="form-group row">
                                    <label class="col-sm-6 text-right col-form-label">KOT(A4-Size) Print</label>
                                    <div class="col-sm-6">
                                        <InputCheckbox type="checkbox" @bind-Value="softwareSetting.KotA4PrintEnable"></InputCheckbox>
                                    </div>
                                </div>
                            </div>
                            <!--/span-->
                            <div class="col-6">
                                <div class="form-group row">
                                    <label class="col-sm-6 text-right col-form-label">Is Order Qty Change</label>
                                    <div class="col-sm-6">
                                        <InputCheckbox type="checkbox" @bind-Value="softwareSetting.IsOrderQtyChangeEnable"></InputCheckbox>

                                    </div>
                                </div>
                            </div>
                            <!--/span-->
                        </div>
                        <div class="row">
                            <div class="col-6">
                                <div class="form-group row">
                                    <label class="col-sm-6 text-right col-form-label">Is SDC Enable</label>
                                    <div class="col-sm-6">
                                        <InputCheckbox type="checkbox" @bind-Value="softwareSetting.IsSdcEnable"></InputCheckbox>
                                    </div>
                                </div>
                            </div>
                            <!--/span-->
                            <div class="col-6">
                                <div class="form-group row">
                                    <label class="col-sm-6 text-right col-form-label">Price Including SD</label>
                                    <div class="col-sm-6">
                                        <InputCheckbox type="checkbox" @bind-Value="softwareSetting.PriceIncludingSdEnable"></InputCheckbox>

                                    </div>
                                </div>
                            </div>
                            <!--/span-->
                        </div>
                    </div>
                    <hr>
                    <div class="form-actions">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="row">
                                    <div class="col-md-6"></div>
                                    <div class="col-offset-4 col-md-6">
                                        <button type="submit" class="btn btn-success">Submit</button>
                                        <button type="button" class="btn btn-inverse">Cancel</button>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6"> </div>
                        </div>
                    </div>
                </EditForm>
            </div>
        </div>
    </div>
</div>



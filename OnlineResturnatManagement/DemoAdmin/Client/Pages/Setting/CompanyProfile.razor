@page "/setting/company-profile"
<div class="row">
    <div class="col-lg-12">
        <div class="card card-outline-info">
            <div class="card-header">
                <h4 class="mb-0 text-white">Company Profile</h4>
            </div>
            <div class="card-body">
                <EditForm Model="companyProfile" OnSubmit="UpdateCompany" enctype="multipart/form-data">
                    <div class="form-body">
                        <h3 class="card-title">Person Info</h3>
                        <hr>
                        <div class="row pt-3">
                            <div class="col-md-6">
                                <div class="row">
                                    <div class="col-12 form-group">
                                        <label class="control-label">Company Name</label>
                                        <InputText @bind-Value="companyProfile.Name" class="form-control" required data-validation-required-message="This field is required" maxlength="500"></InputText>
                                        <div class="form-control-feedback"><small>Add <code>maxlength='500'</code> attribute for maximum number of characters to accept. </small></div>
                                    </div>
                                    <div class="col-12 form-group">
                                        <label class="control-label">Company Address</label>
                                        <InputText @bind-Value="companyProfile.Address" class="form-control"></InputText>
                                    </div>
                                    <div class="col-12 form-group">
                                        <label class="control-label">Company Vat Reg. No</label>
                                        <InputText @bind-Value="companyProfile.VatRegNo" class="form-control"></InputText>
                                    </div>
                                    <div class="col-12 form-group">
                                        <label class="control-label">Owner Info</label>
                                        <InputText @bind-Value="companyProfile.OwnerInfo" class="form-control"></InputText>
                                    </div>
                                    <div class="col-12 form-group">
                                        <label class="control-label">Company Logo</label>
                                        <div class="controls">
                                            <InputFile OnChange="OnInputFileChange" />
                                            
                                            @*<InputFile OnChange="HandleFileSelection" class="form-control">*@
                                        </div>
                                        <img src="@imgUrl">
                                    </div>
                                </div>
                                
                            </div>
                           
                        </div>
                    </div>
                    <div class="form-actions">
                        <button type="submit" class="btn btn-success"> <i class="fa fa-check"></i> Save</button>
                        <button type="button" class="btn btn-inverse">Cancel</button>
                    </div>
                </EditForm>
            </div>
        </div>
    </div>
</div>

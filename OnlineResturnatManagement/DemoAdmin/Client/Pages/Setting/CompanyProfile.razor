@page "/setting/company-profile"
@inject IToastService toastService


@if (string.IsNullOrEmpty(statusResult.Message))
{
    <div></div>
}
else
{
    if (statusResult.Message != "" && statusResult.StatusCode == 200)
    {
        @*<div class="alert alert-success">@statusResult.Message</div>*@
        toastService.ShowSuccess(@statusResult.Message);
    }
    else
    {
        toastService.ShowError(@statusResult.Message);
    }

}
<div class="row">
    <div class="col-md-3"></div>
    <div class="col-lg-6 col-md-6 col-12">
        <div class="card card-outline-info">
            <div class="card-header">
                <h4 class="mb-0 text-white">Company Profile</h4>
            </div>
            <div class="card-body">
                <EditForm Model="companyProfile" OnValidSubmit="UpdateCompany" enctype="multipart/form-data">
                    <DataAnnotationsValidator />
                    <div class="form-body">
                       @* <h3 class="card-title">Person Info</h3>
                        <hr>*@
                       @* <div class="row pt-3">
                            <div class="col-md-6">
                                
                                
                            </div>
                           
                        </div>*@
                        <div class="row">
                            <div class="col-12 form-group">
                                <label class="control-label">Company Name</label>
                                <InputText @bind-Value="companyProfile.Name" class="form-control"></InputText>
                                <ValidationMessage For="() => companyProfile.Name" />
                            </div>
                            <div class="col-12 form-group">
                                <label class="control-label">Company Address</label>
                                <InputText @bind-Value="companyProfile.Address" class="form-control"></InputText>
                            </div>
                            <div class="col-12 form-group">
                                <label class="control-label">Company Vat Reg. No</label>
                                <InputText @bind-Value="companyProfile.VatRegNo" class="form-control"></InputText>
                            </div>
                            <div class="col-12 form-group">
                                <label class="control-label">Owner Info</label>
                                <InputText @bind-Value="companyProfile.OwnerInfo" class="form-control"></InputText>
                            </div>
                            <div class="col-12 form-group">
                                <label class="control-label">Company Logo</label>
                                <div class="controls">
                                    <InputFile OnChange="OnInputFileChange" />
                                </div>
                                @if (imageMessage != "")
                                {
                                    <span>@imageMessage</span>
                                }

                                <img src="@imgUrl">
                            </div>
                        </div>
                    </div>
                    <div class="form-actions">
                        <button type="submit" class="btn btn-success"> <i class="fa fa-check"></i> Save</button>
                    </div>
                </EditForm>
            </div>
        </div>
    </div>
    <div class="col-md-3"></div>
</div>
